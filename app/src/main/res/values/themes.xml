<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#004EF8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#004EF8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.MyNote">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">#575962</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>
    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="StyleOfNoteIdAndColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6B2B2D31</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="StyleOfNoteHeaderAndDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222530</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="RecyclerviewStyle">
        <item name="android:layout_width">@dimen/zeroDp</item>
        <item name="android:layout_height">@dimen/zeroDp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="BackgroundHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#222530</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BackgroundPicture">
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">101dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:contentDescription">@string/add_note</item>
    </style>
    <style name="BackgroundLinearLayout">
        <item name="android:layout_width">283dp</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ActivityEditNoteMarginTopEnd">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>


